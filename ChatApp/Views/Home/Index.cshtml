
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-align: center;
            position: relative;
            z-index: 1;
        }

            header a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
                font-size: 16px;
            }

                header a:hover {
                    text-decoration: underline;
                }

        #chatContainer {
            flex: 1;
            width: 400px;
            height: 500px;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            margin: 20px auto;
        }

        #messages {
            height: 400px;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px;
            overflow-y: auto;
            margin-bottom: 10px;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            ul li {
                margin-bottom: 10px;
                font-size: 14px;
            }

        input[type="text"] {
            width: calc(100% - 22px); /* Adjusted width to fit padding */
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            margin-bottom: 10px; /* Added margin for spacing */
        }

        input[type="button"] {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            input[type="button"]:hover {
                background-color: #0056b3;
            }

        li i {
            color: gray;
            font-size: 12px;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            // تعريف المتغير name
            let name = '@ViewBag.Username';

            // define connection & create proxy in one step
            let connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .build();

            // start connection
            connection.start().catch(err => console.error(err));

            // define callback function
            connection.on("createmess", function (n, m) {
                $("#messages ul").append("<li><strong>" + n + ":</strong> " + m + "</li>");
                $("#messages").scrollTop($("#messages")[0].scrollHeight);
            });

            // define send function
            window.send = function () {
                let message = $("#txt").val();
                if (message) {
                    connection.invoke("sendMessage", name, message)
                        .catch(err => console.error(err));
                    $("#txt").val(""); // Clear input field after sending
                }
            };
        });
    </script>
</head>
<body>
    @* <header>
        <a href="/home">Home</a>
        <a href="/logout">Logout</a>
    </header> *@
    <div id="chatContainer">
        <div id="messages">
            <ul></ul>
        </div>
        <input type="text" id="txt" placeholder="Type a message..." />
        <input type="button" value="Send" onclick="send()" />
    </div>
</body>
</html>




